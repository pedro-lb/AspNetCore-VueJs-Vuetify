<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AspNetCore_VueJs_Vuetify</title>

    <environment include="Development">
        <link href="~/lib/vuetify/vuetify.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/lib/vuetify/vuetify.min.css" rel="stylesheet" />
    </environment>

    <link href='https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900|Material+Icons' rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <main role="main">
        <v-app id="app">
            <v-content>
                @RenderBody()
            </v-content>
        </v-app>
    </main>

    <environment include="Development">
        <script src="~/lib/vue/vue.js"></script>
        <script src="~/lib/vuetify/vuetify.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.min.js"
                asp-fallback-src="~/lib/vue/vue.min.js"
                crossorigin="anonymous">
        </script>
        <script src="~/lib/vuetify/vuetify.min.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>